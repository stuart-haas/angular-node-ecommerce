{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src/server",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es5", 
      "es6"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@route/*": ["route/*"],
      "@service/*": ["service/*"],
      "@controller/*": ["controller/*"], 
      "@util/*": ["util/*"], 
      "@entity/*": ["entity/*"],
      "@repository/*": ["repository/*"],
      "@migration/*": ["migration/*"],
      "@subscriber/*": ["subscriber/*"]
    }
  },
  "include": [
    "src/server/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}